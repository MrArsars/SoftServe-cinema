@using Microsoft.VisualBasic
@model List<Core.Models.Session.Session>
@using System.Globalization

@{
    ViewData["Title"] = "Home Page";
}

<main style="overflow: auto" class="main-body">
    <section class="section section_03">
        <div class="container">
            <div class="title-box">
                <div class="title-box__title">Розклад сеансів</div>
                
            </div>
            <table cellspacing="0" cellpadding="0" class="schedule-table">
                <tbody>
                <tr class="schedule-table__row schedule-table__row_head category_14" style="position: static; left: 0px; top: 0px;">
                    <td class="schedule-table__col">@DateTime.Now.ToString("ddd, dd.MM.", new CultureInfo("uk-UA"))</td>
                    <td class="schedule-table__col">Назва фільму</td>
                    <td class="schedule-table__col">Зал</td>
                    <td class="schedule-table__col">Формат</td>
                    <td class="schedule-table__col">Купити</td>
                </tr>
                @foreach (var s in Model)
                {
                   <partial model="@s" name="SessionRow"/>
                }
            </table>
        </div>
    </section>
   
</main>